---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro'

import { getCollection } from "astro:content";

const allFeatures = await getCollection("feature");
---

<Layout title="Discord Markdown">
	<h1 class="text-3xl mb-4">Explore</h1>
	<div class="features">
		{allFeatures.map((feature) => (
			<Card title={feature.data.title} body={feature.data.description} href={`/feature/${feature.slug}`} />
		))}
	</div>
	<a href="https://github.com/Hacksore/discord-md" target="_blank"><p class="mt-4">source code</p></a>
</Layout>

<style>

	a {
		text-decoration: none;
		color: #c1c1c1
	}

	.features {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
		gap: 1rem;
	}
</style>
